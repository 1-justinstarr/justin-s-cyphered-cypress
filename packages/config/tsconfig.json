{
  "extends": "../ts/tsconfig.json",
  "include": [
    "lib",
  ],
  "compilerOptions": {
    "outDir": "./dist",
    "noImplicitAny": true,
    "strict": true,
    "allowJs": false,
    "noUnusedLocals": false,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "importsNotUsedAsValues": "error",
    "declaration": true,
    "sourceMap": true
  }
}
