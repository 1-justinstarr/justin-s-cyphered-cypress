{
  "extends": "../ts/tsconfig.json",
  "include": [
    "src"
  ],
  "exclude": [
    "test",
    "script"
  ],
  "compilerOptions": {
    "strict": true,
    "allowJs": false,
    "rootDir": "src",
    "noImplicitAny": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "noUncheckedIndexedAccess": true,
    "importsNotUsedAsValues": "error"
  }
}